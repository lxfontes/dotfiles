AddKeysToAgent yes

Host workstation
  HostName 10.124.57.110
  ForwardAgent yes
  User lxf
  RemoteForward /run/user/1001/gnupg/S.gpg-agent /tmp/S.gpg-agent.extra

Host github.com
	User git
	IdentityFile ~/.ssh/github_rsa

Host github.internal.digitalocean.com
	User git
	IdentityFile ~/.ssh/do_rsa

Host jump
  HostName jump.internal.digitalocean.com
  ForwardAgent yes
  User lfontes
	IdentityFile ~/.ssh/do_rsa

Host stage2-jump
  HostName stage2-jump.internal.digitalocean.com
  ForwardAgent yes
  User lfontes
	IdentityFile ~/.ssh/do_rsa

Host *.s2r1.internal.digitalocean.com
  User lfontes
  ServerAliveInterval 15
  ProxyCommand ssh stage2-jump -W %h:%p

Host *.digitalocean.com
  User lfontes
  ServerAliveInterval 15
  ProxyCommand ssh jump -W %h:%p
