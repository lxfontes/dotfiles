AddKeysToAgent yes

Host *
  ServerAliveInterval 10
  ServerAliveCountMax 9999

Host github.com
	User git
	IdentityFile ~/.ssh/id_github

Host bitbucket.org
	User git
	IdentityFile ~/.ssh/id_github

Host localdev
  HostName 127.0.0.1
  Port 8222
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Host vantage-prod
  HostName 52.1.206.24
  User ubuntu
  IdentityFile ~/.ssh/id_ed25519

Host vantage-staging
  HostName 18.213.223.161
  User ubuntu
  IdentityFile ~/.ssh/id_ed25519
